{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": [
    "node_modules"
  ]
}